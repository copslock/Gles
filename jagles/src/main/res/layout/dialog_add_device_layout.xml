<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_shape_dialog_alert_base"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"

        android:text="添加设备" />

    <EditText
        android:id="@+id/name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jagles_white"
        android:hint="设备id(必要)"
        android:padding="16dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/pwd_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jagles_white"
        android:hint="设备密码"
        android:padding="16dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/number_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jagles_white"
        android:hint="周期数(必要)"
        android:inputType="number"
        android:padding="16dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_default_item_tra_bg"
        android:padding="16dp"
        android:text="添加"
        android:textSize="16sp" />
</LinearLayout>